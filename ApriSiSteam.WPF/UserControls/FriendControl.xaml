<UserControl x:Class="ApriSiSteam.WPF.UserControls.FriendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApriSiSteam.WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="ImageDisplay"
               Source="https://avatars.cloudflare.steamstatic.com/3da502bfc03b9f9d54c29467309e5229dcbf2b27_full.jpg"/>
        <TextBlock x:Name="NameDisplay"
                   Grid.Column="1"
                   Text="BAUHAUS"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="2,0,0,0"/>
    </Grid>
</UserControl>
